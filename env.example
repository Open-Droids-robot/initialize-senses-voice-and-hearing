# Robot Assistant Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ElevenLabs Configuration (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VOICE_ID=your_preferred_voice_id_here

# Audio Configuration
MICROPHONE_INDEX=0
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# Wake Word Configuration
WAKE_WORD=hey_spark

# Audio Processing
VAD_SENSITIVITY=0.5
NOISE_REDUCTION=true

# Conversation Settings
MAX_CONVERSATION_HISTORY=10
RESPONSE_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=robot_assistant.log

# Development Mode (set to true for testing without real APIs)
DEV_MODE=true
